<body>
  <div class="container">
    <h1>üñºÔ∏è Deepfake Image Analyzer</h1>
    <input type="file" id="deepfakeInput" accept="image/*" />
    <button onclick="analyzeImage()">Analyze Image</button>
    <img id="deepfakeImage" />
    <div id="deepfakeResult"></div>
  </div>

  <script>
    async function analyzeImage() {
      const input = document.getElementById('deepfakeInput');
      const image = document.getElementById('deepfakeImage');
      const result = document.getElementById('deepfakeResult');
      const file = input.files[0];

      if (!file) {
        result.textContent = '‚ö†Ô∏è Please upload an image.';
        return;
      }

      image.src = URL.createObjectURL(file);

      const formData = new FormData();
      formData.append('image', file); // üëà Send image file

      result.textContent = 'üîç Analyzing...';

      try {
        const response = await fetch('http://localhost:3000/analyze-image', {
          method: 'POST',
          body: formData
        });
        const text = await response.text();
        result.textContent = text;
      } catch (err) {
        result.textContent = '‚ùå Error analyzing image.';
        console.error(err);
      }
    }
  </script>
